@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>

@using (@Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Birthdate)
        @*
            In the <lable> tag for attribute is set so that 
            after clicking on label Name focus is set to textbox

            <label for="Birthdate">Date of Birth</label>
        *@
        @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.IsSubscribedToNewsletter)Subscribe to Newsletter?
        </label>
    </div>
}

