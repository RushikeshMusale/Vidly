@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>



@if (Model != null && Model.Count() != 0)
{
    <table id="customers" class="table table-bordered table-hover">
        <tr>
            <th>
                Customer
            </th>
            <th>
                Membership Type
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </table>
}
else
{
    var message = "We don't have any customers Yet!";
    @message
}



@section scripts{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);

                if(confirm("Are you sure you want to delete customr?"))
                {
                    $.ajax({
                        //here $(this) is button
                        //url: "/api/customers/" + $(this).attr("data-customer-id"),

                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {

                            //we can't use $(this) here, because it won't give us button 
                            //it will be success callback function
                            button.parents("tr").remove();
                            console.log("succss");
                        }
                    })                    
                }
            })
        })
    </script>
}